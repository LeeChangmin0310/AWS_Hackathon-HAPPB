<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#031A56"
    tools:context=".Signup">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bk" />

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:fontFamily="@font/bm"
                android:text="정보 입력"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="25dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/signNametext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/ko"
                    android:text="이름"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/signName"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/white_line"
                    android:ems="24"
                    android:fontFamily="@font/ko"
                    android:hint="예: 휴플리케이션"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="#85D5D5D5"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/signAgetext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/ko"
                    android:text="나이"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/signAge"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/white_line"
                    android:ems="24"
                    android:fontFamily="@font/ko"
                    android:hint="나이를 입력해주세요"
                    android:inputType="textPassword"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="#85D5D5D5"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/signHeighttext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/ko"
                    android:text="키"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/signHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/white_line"
                    android:ems="24"
                    android:fontFamily="@font/ko"
                    android:hint="키를 입력해주세요"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="#85D5D5D5"
                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/signWeighttext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/ko"
                    android:text="몸무게"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/signWeight"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/white_line"
                    android:ems="24"
                    android:fontFamily="@font/ko"
                    android:hint="몸무게를 입력해주세요"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="#85D5D5D5"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/signNumbertext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/ko"
                    android:text="전화번호"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/signNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/white_line"
                    android:ems="24"
                    android:fontFamily="@font/ko"
                    android:hint="전화번호를 입력해주세요"
                    android:inputType="phone"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="#85D5D5D5"
                    android:textSize="13dp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/storeBt"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#4B759F"
                    android:fontFamily="@font/ko"
                    android:text="저장"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>